<UserControl x:Class="WPFDashboard.Views.OrderView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDashboard.Views"
             xmlns:views="clr-namespace:WPFDashboard.Views.OrderViews"
             xmlns:viewmodels="clr-namespace:WPFDashboard.ViewModel.OrderVModels"
             xmlns:detailviewmodels="clr-namespace:WPFDashboard.ViewModel.DetailViewModels"
             xmlns:detailviews="clr-namespace:WPFDashboard.Views.DetailViews"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="1080"
             DataContext="{Binding Source={StaticResource Locator}, Path=Orders}">
    <Grid >
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="2*"/>
        </Grid.RowDefinitions>



        <DataGrid AutoGenerateColumns="False" ItemsSource="{Binding OrdersList}" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Customer First Name" Binding="{Binding Customer.FirstName}"/>
                <DataGridTextColumn Header="Customer Last Name" Binding="{Binding Customer.LastName}"/>
                <DataGridTextColumn Header="Order Date" Binding="{Binding DateOfOrder}"/>
                <DataGridTextColumn Header="Due Date" Binding="{Binding DateOfDelivery}"/>
                <DataGridTextColumn Header="State" Binding="{Binding Status.Decription}" />
                <DataGridTemplateColumn Header="Take action">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="Edit order" Command="{Binding DataContext.BtnShowdetails, RelativeSource={RelativeSource AncestorType=DataGrid}}" CommandParameter="{Binding}"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

            </DataGrid.Columns>
        </DataGrid>

        <!--OrderDeatailspage-->
        <Grid Grid.Row="1">
            <ContentControl Content="{Binding OrderDetailsView}">
                <ContentControl.Resources>
                    <DataTemplate DataType="{x:Type viewmodels:OrderDetailsVm}">
                        <views:OrderDetailsView></views:OrderDetailsView>
                    </DataTemplate>
                </ContentControl.Resources>

            </ContentControl>


        </Grid>

    </Grid>
</UserControl>
