<UserControl x:Class="WPFDashboard.Views.DetailViews.PackageDetailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFDashboard.Views.DetailViews"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             DataContext="{Binding Source={StaticResource Locator}, Path=PackageDetail}">
    <Grid Margin="10">
        <!--Title row-->
            <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Content="Package Details" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <!--Details window-->
            <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!--============Package ID===============-->
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Margin="5">
                <Label Content="Package ID:" FontWeight="Bold" FontSize="15" Margin="5"/>
                <Label Content="Muster ID" Margin="5" FontSize="15"/>
            </StackPanel>

            <StackPanel Grid.Column="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Right">
                <Label Content="State" FontWeight="Bold" HorizontalAlignment="Right" FontSize="15"/>
                <ComboBox Width="50" Margin="5"/>
            </StackPanel>


            <!--=============Package Name, Wrapping,Description and price Sections===============-->
            <Grid Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                    <RowDefinition Height="2*"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <!--Package name-->

                <Label Content="Package Name:" FontWeight="Bold" FontSize="15" Margin="5" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                <Label Grid.Column="1" Content="Birthday Box" Margin="5" FontSize="15" HorizontalAlignment="Left" VerticalAlignment="Center"/>

                <!--wrapping Image-->

                <Label Grid.Row="1" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Wrapping:" FontWeight="Bold" FontSize="15" Margin="5"/>
                <Viewbox Grid.Row="2" Grid.ColumnSpan="2" Margin="5">
                    <Image />
                </Viewbox>

                <!--Description-->

                <Label Grid.Row="3" VerticalAlignment="Center" HorizontalAlignment="Right" Content="Description:" Margin="5" FontWeight="Bold" FontSize="15"/>
                <TextBox Grid.Row="4" Grid.ColumnSpan="2" Margin="5"/>

                <!--Price-->

                <Label Grid.Row="5" Content="Price:" Margin="5" FontWeight="Bold" FontSize="15"/>
                <TextBox Grid.Row="5" Grid.Column="1" Margin="5"/>

            </Grid>

            <!--=================Data grid with Chocolate List===========-->
            <Grid Grid.Column="1" Grid.Row="1">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                <DataGrid ItemsSource="{Binding Chocolates}" Margin="10"/>
                <!--<ComboBox Grid.Row="1"/>-->
            </Grid>
        </Grid>
    </Grid>
</UserControl>
